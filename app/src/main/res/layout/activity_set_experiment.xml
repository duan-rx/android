<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BluetoothActivity">
    <RelativeLayout
        android:id="@+id/experimentHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/sp_exHeadSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:foregroundGravity="right"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:entries="@array/sp_experimentSelect"></Spinner>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <Spinner
            android:id="@+id/sp_exItemSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </Spinner>
        <EditText
            android:id="@+id/et_ex1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <EditText
            android:id="@+id/et_ex2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_exAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/button"
                android:text="新增"></Button>
            <Button
                android:id="@+id/bt_exChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="修改"
                android:layout_margin="1dp"
                android:layout_toRightOf="@+id/bt_exAdd"></Button>

            <Button
                android:id="@+id/bt_exDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_toRightOf="@+id/bt_exChange"
                android:background="@drawable/button"
                android:text="删除"></Button>
            <Button
                android:id="@+id/bt_exSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button"
                android:text="保存"></Button>


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lv_exShowItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>




</LinearLayout>