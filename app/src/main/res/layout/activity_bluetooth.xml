<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BluetoothActivity">
    <TextView
        android:id="@+id/tv_showMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="以下检测如果同意依次点击"></TextView>
    <Button
        android:id="@+id/bt_power"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="允许获取蓝牙权限 "></Button>
    <Button
        android:id="@+id/bt_isSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设备是否支持蓝牙"></Button>
    <Button
        android:id="@+id/bt_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开蓝牙"></Button>
    <Button
        android:id="@+id/bt_discovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动蓝牙可发现"></Button>
    <Button
        android:id="@+id/bt_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙扫描"></Button>
    <Button
        android:id="@+id/bt_closeScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭扫描"></Button>
    <Button
        android:id="@+id/bt_runTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙与设备对接测试"></Button>
    <Button
        android:id="@+id/bt_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭蓝牙"></Button>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_item"></ListView>

</LinearLayout>